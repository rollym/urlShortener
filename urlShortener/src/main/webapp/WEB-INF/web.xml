<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="true">
	<display-name>ShortenURL</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>ShortenURL</servlet-name>
		<servlet-class>org.javastack.shortenurl.ShortenURL</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>ShrtenURL</servlet-name>
		<url-pattern>/shorten</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShortenURL</servlet-name>
		<url-pattern>/r/*</url-pattern>
	</servlet-mapping>
</web-app>